<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:layout_alignParentTop="true"      
        android:orientation="vertical"
        android:background="@drawable/setting"
         xmlns:android="http://schemas.android.com/apk/res/android"> 
     <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="96dip"
	   android:gravity="top"
	  > 
	   <TextView
	   android:id="@+id/TVBack"
	  android:layout_width="120dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="&lt; 返回"
	   android:gravity="center"
	  />
	   <TextView	  
	  android:layout_width="300dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="姓名："
	   android:gravity="right"
	   android:visibility="invisible"
	  />	  
	   <TextView
	   android:id="@+id/StudentName"
	  android:layout_width="260dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="学生姓名"
	   android:gravity="left"
	   android:visibility="invisible"
	  />
	    <TextView	  
	  android:layout_width="100dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="考号："
	   android:gravity="right"
	  />	  
	    <TextView
	   android:id="@+id/kaohao"
	  android:layout_width="300dip"
	  android:layout_height="wrap_content"
	   android:textSize="25dip"
	  android:textColor="#ffffff"	
	  android:text="1"  
	   android:gravity="left"
	  />	   
	   <TextView
	   android:id="@+id/TVshezhi"
	  android:layout_width="100dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="设置"
	   android:gravity="center"
	  />
		<TextView
	   android:id="@+id/TVyulan"
	  android:layout_width="100dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="确定"
	   android:gravity="center"
	  />	   
	  </LinearLayout>
	    <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="40dip"	  
	  android:gravity="left" 	  
	  android:paddingRight="5dip"	  
	  >
	    <TextView	  
	  android:layout_width="100dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"	 
	   android:gravity="right"
 		android:textColor="@color/ScoreMainFontColor"
	   android:text="考站："
	  />
	   <TextView
	   android:id="@+id/KaoZhan"
	   android:layout_width="460dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"	
	   android:gravity="left"   
	   android:text="dfeefre"
	   android:textColor="@color/ScoreMainFontColor"	   
	  />
	  <TextView
	       android:layout_width="80dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"	
	   android:gravity="right"    
	   android:text="房间："	 
	   android:textColor="@color/ScoreMainFontColor" 
	  />
	  <TextView
	   android:id="@+id/FangJian"
	  android:layout_width="360dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:gravity="left"  
	  android:text="401"
	  android:textColor="@color/ScoreMainFontColor"
	  />
	  <TextView
	      android:layout_width="150dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	android:gravity="right"  
	   android:text="评分表个数："	
	   android:textColor="@color/ScoreMainFontColor"  
	  />
	   <TextView
	   android:id="@+id/PingFenBiaoCount"
	  android:layout_width="150dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:gravity="left"  
	   android:text="1"	 
	   android:textColor="@color/ScoreMainFontColor"
	  />		
		</LinearLayout>
		 <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="40dip"	  
	  android:gravity="left" 	  
	  android:paddingRight="5dip"	  
	  >
	    <TextView
	      android:layout_width="120dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	android:gravity="right"  
	   android:text="评分表："	
	   android:textColor="@color/ScoreMainFontColor"  
	  />
	   <TextView
	   android:id="@+id/PingFenBiaoName"
	  android:layout_width="600dp"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:gravity="left"  
	   android:text="评分表名称"	 
	   android:textColor="@color/ScoreMainFontColor"
	  />		
	   </LinearLayout>
    <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="40dip"
	  android:background="#DFDEE3"	 
	  android:gravity="center" 
	  android:layout_gravity="center"
	  >
	   <TextView
	  android:layout_width="660dip"
	  android:layout_height="wrap_content"
	   android:textSize="21dip"
	  android:textColor="@color/ScoreMainFontColor"
	   android:text="内容"
	   android:gravity="center"
	  />
	  <TextView
	  android:layout_width="100dip"
	  android:layout_height="wrap_content"
	   android:textSize="21dip"
	  android:textColor="@color/ScoreMainFontColor"
	   android:text="分值"
	   android:gravity="right"
	  />
	  <TextView
	  android:layout_width="120dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="@color/ScoreMainFontColor"
	  android:text="得分"
	  android:gravity="center"
	  />
 	<TextView
	  android:layout_width="400dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="@color/ScoreMainFontColor"
	  android:text="操作"
	  android:gravity="center"
	  />	  
</LinearLayout>
 <LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"	  
	  android:gravity="center" 
	  android:layout_gravity="center"
	  > 
	  <ExpandableListView
	      android:id="@+id/LVList"
        android:layout_width="1280dip"
        android:layout_height="560dip"     
       	android:fastScrollEnabled="true"
       	android:gravity="center"
       	android:layout_gravity="center"
       	android:childDivider="@color/linecolor"
       	android:dividerHeight="1px"      
	   > 
	  </ExpandableListView>
    </LinearLayout> 
</LinearLayout>

