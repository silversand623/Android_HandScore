<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:layout_alignParentTop="true"      
        android:orientation="vertical"
        android:background="@drawable/setting"
         xmlns:android="http://schemas.android.com/apk/res/android"> 
     <LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="96dip"
	   android:gravity="top"
	  > 
	   <TextView
	   android:id="@+id/ExamName"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="考试名称"
	   android:gravity="center"
	  />
	   <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	   android:gravity="center" 
	  android:layout_gravity="center"
	  >
	  <TextView	  
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="考站："
	   android:gravity="center"
	   android:layout_gravity="left"
	  />
	   <TextView
	   android:id="@+id/KaoZhan"
	  android:layout_width="300dip"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="dfeefre"
	   android:gravity="left"	 
	  />
	  <TextView	   
	  android:layout_width="150dip"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="房间："
	   android:gravity="right"
	  />
	  <TextView
	   android:id="@+id/FangJian"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"	
	  android:text="401"  
	   android:gravity="right"
	  />
	  <TextView	  
	  android:layout_width="300dip"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="评分表个数："
	   android:gravity="right"
	  />
	   <TextView
	   android:id="@+id/PingFenBiaoCount"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="1"
	   android:gravity="center"
	  />
	  </LinearLayout>
	  </LinearLayout>
	   <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="46dip"	  
	  android:gravity="right" 	  
	  android:paddingRight="40dip"
	  >
		<com.example.webview.SegmentView
		android:id="@+id/segView"
		android:layout_width="400dp"  
		android:layout_height="wrap_content"  
		android:layout_gravity="center_horizontal"  
		/>	
		</LinearLayout>
    <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="40dip"
	  android:background="#15A2D5"	 
	  android:gravity="center" 
	  android:layout_gravity="center"
	  >  
	  <TextView
	  android:layout_width="150dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="#ffffff"
	  android:text="照片"
	  android:gravity="center"	  
	  />	  
	   <TextView
	  android:layout_width="150dip"
	  android:layout_height="wrap_content"
	   android:textSize="21dip"
	  android:textColor="#ffffff"
	   android:text="姓名"
	   android:gravity="center"
	  />
	  <TextView
	  android:layout_width="150dip"
	  android:layout_height="wrap_content"
	   android:textSize="21dip"
	  android:textColor="#ffffff"
	   android:text="考试时间"
	   android:gravity="center"
	  />
	  <TextView
	  android:layout_width="160dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="#ffffff"
	  android:text="考号"
	  android:gravity="center"
	  />
	   <TextView
	  android:layout_width="160dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="#ffffff"
	  android:text="学号"
	  android:gravity="center"
	  />
	  <TextView
	   android:layout_width="150dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="#ffffff"
	  android:text="班级"
	  android:gravity="center"
	  />
	  <TextView
	  android:layout_width="150dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="#ffffff"
	  android:text="状态"
	  android:gravity="center"
	  />
	  <TextView
	  android:layout_width="160dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="#ffffff"
	  android:text="分数"
	  android:gravity="center"
	  />
</LinearLayout>

 <LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"	  
	  android:gravity="center" 
	  android:layout_gravity="center"
	  >  
      <ListView
        android:id="@+id/LVList"
        android:layout_width="1220dip"
        android:layout_height="510dip"     
       	android:fastScrollEnabled="true" 
       	android:gravity="center"
       	android:layout_gravity="center"
        >       
    </ListView>
    </LinearLayout>
    <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"	  
	  android:gravity="right"
	  android:paddingTop="30dip"
	  android:paddingRight="30dip"
	  >     
    <Button
	android:id="@+id/btntuichu"
	android:layout_width="89dip"
    android:layout_height="40dip" 
     android:background="@drawable/scorebtntemple" 
	android:text="退出"
	android:textSize="26sp"
	android:gravity="center" 
	/>
    </LinearLayout>
</LinearLayout>

