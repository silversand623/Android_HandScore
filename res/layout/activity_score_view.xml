<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:layout_alignParentTop="true"      
        android:orientation="vertical"
        android:background="@drawable/setting"
         xmlns:android="http://schemas.android.com/apk/res/android"> 
     <LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="93dip"
	   android:gravity="top"
	  > 
	   <TextView
	   android:id="@+id/ExamName"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="考试名称"
	   android:gravity="center"
	  />
	   <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	   android:gravity="center" 
	  android:layout_gravity="center"
	  >
	  <TextView	  
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="考站："
	   android:gravity="center"
	   android:layout_gravity="left"
	  />
	   <TextView
	   android:id="@+id/KaoZhan"
	  android:layout_width="300dip"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="dfeefre"
	   android:gravity="left"	 
	  />
	  <TextView	   
	  android:layout_width="150dip"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="房间："
	   android:gravity="right"
	  />
	  <TextView
	   android:id="@+id/FangJian"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"	
	  android:text="401"  
	   android:gravity="right"
	  />
	  <TextView	  
	  android:layout_width="300dip"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="评分表个数："
	   android:gravity="right"
	  />
	   <TextView
	   android:id="@+id/PingFenBiaoCount"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	   android:textSize="20dip"
	  android:textColor="#ffffff"
	   android:text="1"
	   android:gravity="center"
	  />
	  </LinearLayout>
	  </LinearLayout>
	  <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:gravity="top"	
	  >
	   <LinearLayout
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"	  
	  android:gravity="center" 
	  android:layout_gravity="center"
	   android:paddingLeft="20dip"
	  > 
	  <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="wrap_content"
	  android:layout_height="40dip"
	  android:background="#15A2D5"	 
	  android:gravity="center" 
	  android:layout_gravity="center"	 
	  >
	   <TextView
	  android:layout_width="650dip"
	  android:layout_height="wrap_content"
	   android:textSize="21dip"
	  android:textColor="#ffffff"
	   android:text="内容"
	   android:gravity="center"
	  />	 
	  <TextView
	  android:layout_width="180dip"
	  android:layout_height="wrap_content"
	  android:textSize="21dip"
	  android:textColor="#ffffff"
	  android:text="得分"
	  android:gravity="center"
	  />	 
</LinearLayout> 
	  <ExpandableListView
	      android:id="@+id/LVListView"
        android:layout_width="830dip"
        android:layout_height="560dip"     
       	android:fastScrollEnabled="true" 
       	android:gravity="center"
       	android:layout_gravity="center"     
	   > 
	  </ExpandableListView>    
	  </LinearLayout>
	  <!-- 右侧学号等信息 -->
	   <LinearLayout
	  android:orientation="vertical"
	  android:layout_width="380dip"
	  android:layout_height="fill_parent"	  
	  android:gravity="top" 
	  android:layout_gravity="top"
	  >
	  <TableLayout	 
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:paddingLeft="30dip"	 
	  >
	  <TableRow
	     android:layout_height="wrap_content"	     
		  android:layout_margin="10dp"
	      >
	       <TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		 
		  android:text="学号："
		 />
		 <TextView
		  android:id="@+id/TextXueHao"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		 
		  android:text="22222222"
		 />	
		 </TableRow>
		 <TableRow 
		      android:layout_height="wrap_content"
		     android:layout_margin="10dp">
		   <TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
			android:textColor="#000000"		
		  android:text="考号："
		 />	
		 <TextView
		  android:id="@+id/TextKaoHao"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"		 
		  android:textSize="21dip"
		  android:textColor="#000000"		 
		  android:text="0"
		 />	
		 </TableRow>
		 <TableRow
		      android:layout_height="wrap_content"
		     android:layout_margin="10dp">
		  <TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		
		  android:text="班级："
		 />	
		 <TextView
		  android:id="@+id/TextBanji"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"	 
		  android:text="2班"
		 />	
		  </TableRow>
		 <TableRow
		      android:layout_height="wrap_content"
		     android:layout_margin="10dp">
		  <TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		
		  android:text="姓名："
		 />	
		 <TextView
		  android:id="@+id/TextXingMing"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		 
		  android:text="2222222"
		 />
		  </TableRow>
		 <TableRow
		      android:layout_height="wrap_content"
		     android:layout_margin="10dp">
		  <TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		
		  android:text="总分为："
		 />	
		 <TextView
		  android:id="@+id/TextZongFen"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		 
		  android:text="100.0"
		 />	
		 </TableRow>
		 <TableRow
		     android:layout_height="wrap_content"
		     android:layout_margin="10dp">
		  <TextView
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="#000000"		
		  android:text="实际得分："
		 />	
		 <TextView
		  android:id="@+id/TextDeFen"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:textSize="21dip"
		  android:textColor="@color/red"		 
		  android:text="100.0"
		 />	
	  </TableRow>
	 </TableLayout>	 
		 <ImageView    
         android:id="@+id/iv_sign"  
        android:layout_marginTop="10dip"  
         android:layout_width="wrap_content"  
         android:layout_height="wrap_content"    
        android:layout_gravity="center"  
         />		
		<TextView  
        android:id="@+id/tv_sign"  
        android:layout_marginTop="10dip"  
        android:layout_below="@id/iv_sign"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_gravity="center"
        android:textSize="35dip"
		android:textColor="@color/blue"
        android:text="点此签名"  
        />
	   </LinearLayout>
	   </LinearLayout>    
    <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"	  
	  android:gravity="right"
	  android:paddingTop="30dip"
	  android:paddingRight="30dip"
	  >      
      <Button
	android:id="@+id/btnfanhui"
	android:layout_width="89dip"
    android:layout_height="40dip" 
    android:background="@drawable/scorebtntemple" 
	android:text="返回"
	android:textSize="26sp"
	android:gravity="center" 
	android:layout_marginRight="20dip"
	/>  
    <Button
	android:id="@+id/btnsubmit"
	android:layout_width="89dip"
    android:layout_height="40dip" 
     android:background="@drawable/scorebtntemple" 
	android:text="提交"
	android:textSize="26sp"
	android:gravity="center" 
	/>
    </LinearLayout>
</LinearLayout>

