<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"       
        android:layout_alignParentTop="true"      
        android:orientation="vertical"
        android:background="@drawable/setting"
         xmlns:android="http://schemas.android.com/apk/res/android"> 
 <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="96dip"
	   android:gravity="top"
	  > 
	   <TextView
	   android:id="@+id/TVBack"
	  android:layout_width="100dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="&lt; 返回"
	   android:gravity="center"
	  />	  
	   <TextView
	   android:id="@+id/ExamName"
	  android:layout_width="1050dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="考试名称"
	   android:gravity="center"
	  />
	   <TextView
	   android:id="@+id/TVsubmit"
	  android:layout_width="100dp"
	  android:layout_height="80dp"
	   android:textSize="25dip"
	  android:textColor="#ffffff"
	   android:text="确定"
	   android:gravity="center"
	  />		
	  </LinearLayout>
	   <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="800dp"
	  android:layout_height="80dip"
	   android:gravity="left"
	  > 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="25dip"
         android:layout_marginLeft="100dp"
         android:textColor="@color/ScoreMainFontColor"
        android:text="请输入评分时使用的间隔分数" />

    <EditText
        android:id="@+id/eTextInterval"
        android:layout_width="200dp"
        android:layout_height="wrap_content"           
        android:text="1"  
       android:background="@drawable/buttonstyle"
        android:layout_marginLeft="50dp"
        android:height="40dip"
        android:digits="0123456789."
        android:inputType="textNoSuggestions">
        <requestFocus />
    </EditText>   
    </LinearLayout>
    <LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="fill_parent"
	  android:layout_height="80dip"
	   android:gravity="left"
	  > 
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="25dip"
         android:layout_marginLeft="100dp"
         android:textColor="@color/ScoreMainFontColor"
        android:text="请选择打分模式" />    
   <com.example.webview.SegmentSet
 	 android:id="@+id/SegmentSetBar"
 	android:layout_width="150dip"
	android:layout_height="wrap_content"	
	android:layout_marginLeft="200dp"    
	>
 </com.example.webview.SegmentSet>
    </LinearLayout>

</LinearLayout>
